<div class="row">

  <div class="col-sm-2">
    <%= render 'users/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 薪酬管理
      </div>
      <div class="panel-body" style="min-height: 450px">

        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>员工ID</th>
            <th>姓名</th>
            <th>基本工资</th>
            <th>基本奖金</th>
            <th>养老保险</th>
            <th>考核扣发</th>
            <th>操作</th>

          </tr>
          </thead>
          <tbody>
          <% @salaries.each do |salary| %>
              <tr>
                <td><%= salary.user.id %></td>
                <td><%= salary.user.name %></td>
                <td><%= salary.basic %>元</td>
                <td><%= salary.bonus %>元</td>
                <td><%= salary.insurence %>元</td>
                <td><%= salary.pulishment %>元</td>

                <% if current_user.role >3 %>
                    <td><%= link_to "编辑", edit_salary_path(salary), class: 'btn-sm btn-info' %></td>

                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= will_paginate @salaries, :param_name => 'page',
                          :previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>

      </div>
    </div>
  </div>
</div>

