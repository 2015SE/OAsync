<div class="row">

  <div class="col-sm-2">
    <%= render 'users/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 编辑考核信息

      </div>
      <div class="panel-body" style="min-height: 450px">




        <%= form_for @performance, html: {class: 'form-horizontal'} do |f| %>
            <%= render 'shared/error_messages', :object => @performance %>

            <%= "当前编辑用户： #{@performance.user.name}"%><hr/>
            <div class=" col-sm-12"><br/>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">迟到次数</div>
                <%= f.text_field :arriving_late, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">请假次数</div>
                <%= f.text_field :leaving, class: 'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">培训成绩</div>
                <%= f.text_field :training_score, class: 'form-control' %>
              </div>
            </div>


            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">综合评价</div>
                <%= f.text_field :evaluation, class: 'form-control' %>
              </div>
            </div>



            <br>
            <div class="form-group">
            <%= f.submit '更新', class: "btn btn-info btn-block" %>
            </div>
            <div class="form-group">
            <%= link_to '取消', performances_path, :class => "btn btn-default btn-block" %>
            </div>
            <br>
            </div>

        <% end %>


      </div>
    </div>


  </div>

</div>







