<div class="row">

  <div class="col-sm-2">
    <%= render 'users/navside' %>
  </div>

  <div class="col-sm-10">

    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-users fa-fw"></i> 绩效管理
      </div>
      <div class="panel-body" style="min-height: 450px">


        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>员工ID</th>
            <th>姓名</th>
            <th>迟到次数</th>
            <th>请假次数</th>
            <th>培训成绩</th>
            <th>综合评分</th>
            <th>操作</th>

          </tr>
          </thead>
          <tbody>
          <% @performances.each do |performance| %>
              <tr>
                <td><%= performance.user.id %></td>
                <td><%= performance.user.name %></td>
                <td><%= performance.arriving_late %></td>
                <td><%= performance.leaving %>
                <td><%= performance.training_score %></td>
                <td><%= performance.evaluation %></td>

                <% if current_user.role >3 %>
                    <td><%= link_to "编辑", edit_performance_path(performance), class: 'btn-sm btn-info' %></td>

                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>

        <%= will_paginate @performances, :param_name => 'page',
                          :previous_label => t("前一页"), :next_label => t("后一页"), :inner_window => 1 %>

      </div>
    </div>
  </div>
</div>

